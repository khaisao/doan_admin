<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#121A40"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="50dp"
            android:adjustViewBounds="true"
            android:src="@drawable/iv_bg_change_password_success" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/text_bold_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Change password success!"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_des"
            style="@style/text_14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Congratulation! Your password has change. Please continue your work"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_back"
            style="@style/text_bold_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:background="@drawable/bg_back_change_password_success"
            android:layout_marginHorizontal="60dp"
            android:paddingVertical="7dp"
            android:text="Back to home screen"
            android:textColor="@color/white" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>